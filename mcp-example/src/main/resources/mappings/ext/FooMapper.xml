<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.vlts.example.repository.FooDao">

    <resultMap extends="cn.vlts.example.repository.mapper.FooMapper.BaseResultMap"
               id="BaseResultMap" type="cn.vlts.example.model.entity.Foo"/>

    <select id="selectOneById" resultMap="BaseResultMap">
        select *
        from foo
        where id = #{id}
        limit 1
    </select>
</mapper>